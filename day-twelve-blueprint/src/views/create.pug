extends layout.pug

block content
    .form-container
        form(action="/create", method="post")
            input(type="text" name="title" placeholder="title" minlength=3 required=true)
            input(type="number" name="year" placeholder="year" required=true)
            input(type="number" name="rating" step="0.1" placeholder="rating" required=true)
            textarea(name="synopsis" required=true) synopsis
            textarea(name="genres" required=true) genres
            input(type="submit", value="submit")